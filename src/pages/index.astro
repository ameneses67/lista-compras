---
import { Icon } from "astro-icon";
import MainLayout from "../layouts/MainLayout.astro";

const title = "Listado de Compras";
const description = "Administración del listado de compras";
---

<MainLayout {title} {description}>
  <div
    class="p-8 bg-tale-100 flex flex-col gap-3 max-w-xs mx-auto my-8 border-4 border-black rounded-xl"
  >
    <Icon name="emojione:shopping-cart" class="w-40 mx-auto" />
    <input
      type="text"
      id="input-field"
      placeholder="Pan"
      class="bg-zinc-200 text-zinc-400 rounded-md border-none py-4 text-center text-xl"
    />
    <button
      id="add-button"
      class="bg-orange-900 text-white form-input rounded-md py-4 text-xl border-none"
      >Añadir al carrito</button
    >
  </div>
</MainLayout>

<script src="../ts/app"></script>
